{% extends 'base.html.twig' %}

{% block title %}Offre de castings{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4">
            <div class="col-3">
                <div class="text-center d-flex flex-column justify-content-center w-75 p-2"
                     style="background-color: white">
                    <h5><b><u>Rechercher un casting</u></b></h5>
                    <p>Domaine</p>
                    <div class="d-flex justify-content-center">
                        <select class="form-select w-75 mb-2" aria-label="Default select example">
                            <option selected>Indifférent</option>
                            {% for domaine in domaines %}
                                <option value="{{ domaine.identifiant }}">{{ domaine.nom }}</option>
                            {% endfor %}
                        </select></div>

                    <p>Civilité</p>
                    <div class="d-flex justify-content-center">
                        <select class="form-select w-75 mb-2" aria-label="Default select example">
                            <option selected>Indifférent</option>
                            {% for civilite in civilites %}
                                <option value="{{ civilite.identifiant }}">{{ civilite.libelle }}</option>
                            {% endfor %}
                        </select></div>
                    <p>Tranche d'âge</p>
                    <div class="d-flex justify-content-center">
                        <select class="form-select w-75 mb-2" aria-label="Default select example">
                            <option selected>Indifférent</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select></div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-outline-primary w-75 mb-2"><i class="bi bi-search"></i>Recherche
                        </button>

                    </div>

                </div>
            </div>
            <div class="col-9 ">
                <div class="d-flex flex-row justify-content-between">
                    <h3 class="m-0 w-50 ">Les castings</h3>


                </div>
                <div class="d-flex justify-content-center">
                    {% if empty == true %}
                        <h4 class="mt-5">Il n'y a pas de casting</h4>
                    {% else %}
                        <div class="d-flex justify-content-around mt-3 w-100 row">

                            {% for offre_casting in offre_castings|slice(0, 6) %}
                                <a class="card col-12"
                                   href="{{ path('show', {'id': offre_casting.identifiant}) }}"
                                   style="width: 30%; align-items: center;margin-bottom: 10px; text-decoration: none; color: black">
                                    <img src="img/istockphoto-511459774-612x612.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <p class="card-text">{{ offre_casting.intituleOffre }}</p>
                                        <p class="card-text">{{ offre_casting.getDomaine().nom }}
                                            - {{ offre_casting.datedebut|date("d/m/Y") }}
                                            au {{ offre_casting.datefin|date("d/m/Y") }}</p>


                                    </div>
                                </a>


                            {% endfor %}
                        </div>
                    {% endif %}
                </div>


            </div>
        </div>
    </div>
{% endblock %}
