{% extends 'base.html.twig' %}

{% block title %}MegaCasting{% endblock %}


{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center mt-2">
            <h2>Recherche de casting par domaine</h2>
        </div>
        <div class="d-flex justify-content-between mb-5 mt-4 text-uppercase" style="width: 100%; overflow-x: auto; white-space: nowrap;
">
            {% for domaine in domaines %}
                <a style="text-decoration: none; color: black; margin-right: 10px;"
                   href="{{ path('offre', {'categorie': domaine.nom}) }}">{{ domaine.nom }}</a>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-8">
                <h3 class="m-0 w-50 ">Les derniers castings</h3>
                <div class="d-flex justify-content-center mt-3 w-100 row row-cols-2 ">

                    {% for offre_casting in offre_castings|slice(0, 6) %}
                        <a class="card col"
                           href="{{ path('show', {'id': offre_casting.identifiant}) }}"
                           style="width: 45%; align-items: center; margin-right: 10px;margin-bottom: 10px; text-decoration: none; color: black ">
                            <img src="/img/istockphoto-511459774-612x612.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <p class="card-text">{{ offre_casting.nom }}</p>
                                <p class="card-text">{{ offre_casting.getMetier().getDomaine().nom }}
                                    - {{ offre_casting.datedebut|date("d/m/Y") }}
                                    au {{ offre_casting.datefin|date("d/m/Y") }}</p>


                            </div>
                        </a>

                    {% endfor %}
                    <div class="d-flex justify-content-center">
                        <a class="mt-5 btn btn-outline-primary" href="{{ url('offre') }}">Voir plus de
                            casting ->
                        </a>
                    </div>
                </div>

            </div>
