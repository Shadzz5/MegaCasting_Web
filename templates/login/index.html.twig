{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        {#        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
        <div class="alert alert-danger">Identifiant invalide pour l'artiste {{ last_username }}</div>

    {% endif %}
    <div class="container">
        <div class="d-flex flex-column align-items-center">
            <h1>Connexion</h1>
            <form action="{{ path('connexion') }}" method="post" class="d-flex flex-column">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"/>

                <label for="password">Mot de passe:</label>
                <input type="password" id="password" name="_password"/>
                {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-light mt-1">Connexion</button>
            </form>
        </div>
    </div>

{% endblock %}